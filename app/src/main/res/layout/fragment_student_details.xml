<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetailsFragment">

    <ImageView
        android:id="@+id/user_avatr"
        android:layout_width="165dp"
        android:layout_height="124dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="profile avater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/student_details_fragment_name_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_avatr" />

    <TextView
        android:id="@+id/student_details_fragment_id_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ID:"
        app:layout_constraintStart_toStartOf="@+id/student_details_fragment_name_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_fragment_name_label_textView" />



    <TextView
        android:id="@+id/student_details_fragment_phone_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Phone:"
        app:layout_constraintStart_toStartOf="@+id/student_details_fragment_id_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_fragment_id_label_textView" />

    <TextView
        android:id="@+id/student_details_fragment_address_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Address:"
        app:layout_constraintStart_toStartOf="@+id/student_details_fragment_phone_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_fragment_phone_label_textView" />

    <TextView
        android:id="@+id/student_details_fragment_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_fragment_name_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_fragment_name_label_textView" />

    <TextView
        android:id="@+id/student_details_fragment_id_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_fragment_id_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_fragment_id_label_textView" />

    <TextView
        android:id="@+id/student_details_fragment_phone_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_fragment_phone_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_fragment_phone_label_textView" />

    <TextView
        android:id="@+id/student_details_fragment_address_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_fragment_address_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_fragment_address_label_textView" />

    <CheckBox
        android:id="@+id/student_details_fragment_checked_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:text="checked"
        app:layout_constraintStart_toStartOf="@+id/student_details_fragment_address_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_fragment_address_label_textView" />

    <Button
        android:id="@+id/student_details_fragment_edit_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:layoutDirection="ltr"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>