<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".StudentDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/student_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.Material3.ActionBar"
        app:title="Student Details" />

    <ImageView
        android:id="@+id/user_avatr"
        android:layout_width="165dp"
        android:layout_height="124dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="profile avater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_details_toolbar"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/student_details_activity_name_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_avatr" />

    <TextView
        android:id="@+id/student_details_activity_id_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ID:"
        app:layout_constraintStart_toStartOf="@+id/student_details_activity_name_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_name_label_textView" />

    <Button
        android:id="@+id/student_details_activity_edit_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:layoutDirection="ltr"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/student_details_activity_phone_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Phone:"
        app:layout_constraintStart_toStartOf="@+id/student_details_activity_id_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_id_label_textView" />

    <TextView
        android:id="@+id/student_details_activity_address_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Address:"
        app:layout_constraintStart_toStartOf="@+id/student_details_activity_phone_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_phone_label_textView" />

    <CheckBox
        android:id="@+id/edit_student_activity_checked_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:text="checked"
        app:layout_constraintStart_toStartOf="@+id/student_details_activity_address_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/student_details_activity_address_label_textView" />

    <TextView
        android:id="@+id/student_details_activity_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_name_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_name_label_textView" />

    <TextView
        android:id="@+id/student_details_activity_id_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_id_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_id_label_textView" />

    <TextView
        android:id="@+id/student_details_activity_phone_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_phone_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_phone_label_textView" />

    <TextView
        android:id="@+id/edit_student_activity_address_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/student_details_activity_address_label_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_details_activity_address_label_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>